		<weaponTags>
			<li>DESplinterRifle</li>
		</weaponTags>
		<tradeTags>
			<li>OGDERanged</li>
		</tradeTags>
		<recipeMaker>
			<recipeUsers>
			
			</recipeUsers>
	<!--	<researchPrerequisite>DarkEldarBasicWeaponsTech</researchPrerequisite>	-->
