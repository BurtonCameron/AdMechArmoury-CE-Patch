		<researchPrerequisite>TauPlasmaTech</researchPrerequisite>
	</recipeMaker>
    <costList>
		<Steel>30</Steel>
		<OGT_Fiotak>10</OGT_Fiotak>
		<OGT_Component>3</OGT_Component>
    </costList>
	</ThingDef>

	
	<!--==================== Tau - Pule Rifle =========================-->

